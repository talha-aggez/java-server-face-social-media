<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">;
    <navigation-rule>
        <description>login user</description>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.validateUsernamePassword}</from-action>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{login.validateUsernamePassword}</from-action>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>register user</description>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.kayit()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/kayit.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{login.kayit()}</from-action>
            <from-outcome>unsuccess</from-outcome>
            <to-view-id>/basarisiz-kayit.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>register user</description>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>resim-yukle</from-action>
            <from-outcome>resim-yukle</from-outcome>
            <to-view-id>/resim-yukle.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
